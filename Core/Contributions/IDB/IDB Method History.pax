package basicPackageVersion: 'IDB$PACKAGE$VERSION 6c'.


package classNames
	add: #ChunkFileMethodScanner;
	add: #ClassHistoryBrowser;
	add: #HistoryBrowserAbstract;
	add: #MethodHistoryBrowser;
	add: #SelectorParser;
	yourself.

package methodNames
	add: #ClassBrowserAbstract -> #browseMethodHistory;
